<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockscreen_gradient_bg"
    tools:context=".LockScreenActivity">

    <!-- Status Bar Overlay -->
    <View
        android:id="@+id/statusBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/status_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_min="24dp"/>

    <!-- App Title with Chess Icon -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/statusBarOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™›"
            android:textSize="24sp"
            android:textColor="@color/chess_gold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChessLock"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:fontFamily="serif"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™›"
            android:textSize="24sp"
            android:textColor="@color/chess_gold"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Time Display -->
    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@color/primary_text"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:text="14:32"/>

    <!-- Date Display -->
    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/timeDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Tuesday, September 10"/>

    <!-- Puzzle Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/puzzleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/dateDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Puzzle Prompt -->
            <TextView
                android:id="@+id/puzzlePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ† Checkmate in 1 move"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"/>

            <!-- Difficulty Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/difficulty_badge_bg"
                android:padding="6dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/difficultyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EASY"
                    android:textColor="@color/difficulty_text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Chess Board Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/boardCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/board_background"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/puzzleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintDimensionRatio="1:1">

        <!-- Chess Board View -->
        <com.ngobi.chesslock.ChessBoardView
            android:id="@+id/chessBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

    </androidx.cardview.widget.CardView>

    <!-- Controls Layout -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <!-- Hint Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/hintButton"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Hint"
            android:textColor="@color/hint_button_text"
            app:backgroundTint="@color/hint_button_bg"
            app:cornerRadius="24dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_lightbulb"
            app:iconTint="@color/hint_button_text"/>

        <!-- Undo Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/undoButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†¶ Undo"
            android:textColor="@color/undo_button_text"
            app:strokeColor="@color/undo_button_stroke"
            app:cornerRadius="24dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_undo"
            app:iconTint="@color/undo_button_text"/>

        <!-- Emergency Unlock Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emergencyUnlockButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Emergency"
            android:textColor="@color/emergency_text"
            app:backgroundTint="@color/emergency_bg"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_warning"
            app:iconTint="@color/emergency_text"/>

    </LinearLayout>

    <!-- Security Indicator -->
    <LinearLayout
        android:id="@+id/securityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/security_indicator_bg"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/security_dot_active"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURED"
            android:textSize="10sp"
            android:textColor="@color/security_text"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>