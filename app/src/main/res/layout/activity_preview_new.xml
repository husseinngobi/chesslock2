<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_700"
    tools:context=".PreviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/previewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lockscreen_preview_emoji"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Visual Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/lockscreen_gradient_bg"
                android:padding="16dp">

                <!-- Preview Time and Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/previewTimeDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_display"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/previewDifficultyBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium_uppercase"
                        android:textSize="12sp"
                        android:textColor="@color/difficulty_text"
                        android:background="@color/difficulty_medium"
                        android:padding="4dp"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/previewDateDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preview_date_default"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Mini Chess Board Preview -->
                <com.ngobi.chesslock.ChessBoardView
                    android:id="@+id/previewBoardView"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Preview Puzzle Prompt -->
                <TextView
                    android:id="@+id/previewPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/move_white_knight_checkmate"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="italic" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customize_lockscreen_emoji"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Current Puzzle Display -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_puzzle"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/puzzlePrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/move_white_knight_checkmate"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="16dp"/>

                <!-- Difficulty Selector -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_level"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/difficultyGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/easy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/easy"
                        android:layout_marginEnd="16dp"/>

                    <RadioButton
                        android:id="@+id/medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium"
                        android:layout_marginEnd="16dp"/>

                    <RadioButton
                        android:id="@+id/hard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hard"/>

                </RadioGroup>

                <!-- Native Lock Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/use_native_lock"
                        android:textSize="14sp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/nativeLockToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Try Fullscreen Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tryFullLockscreenButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/try_fullscreen"
                android:textColor="@color/white"
                app:backgroundTint="@color/chess_gold"
                app:cornerRadius="28dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- Apply Preview Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyPreviewButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/test_actual_lock"
                android:textColor="@color/primary_text"
                app:backgroundTint="@color/primary_dark"
                app:cornerRadius="28dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/openSettingsButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/advanced_settings_emoji"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:cornerRadius="28dp"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
