<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockscreen_gradient_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".MainActivity">

        <!-- App Header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Chess Crown Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â™›"
                android:textSize="64sp"
                android:textColor="@color/chess_gold"
                android:layout_marginBottom="16dp"/>

            <!-- App Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChessLock"
                android:textSize="32sp"
                android:textColor="@color/primary_text"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure your device with chess"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/difficulty_hard"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/statusIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âŒ"
                    android:textSize="24sp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ChessLock needs setup. Tap 'Complete Setup' to begin."
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/actionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/statusCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Setup Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setupButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”§ Complete Setup"
                    android:textColor="@color/primary_text"
                    app:backgroundTint="@color/chess_gold"
                    app:cornerRadius="28dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Launch Lock Screen Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openLockScreenButton"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”’ Test Chess Lock"
                    android:textColor="@color/primary_text"
                    app:backgroundTint="@color/primary_dark"
                    app:cornerRadius="28dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Preview Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previewLockScreenButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ‘ï¸ Preview Lockscreen"
                    android:textColor="@color/chess_gold"
                    app:strokeColor="@color/chess_gold"
                    app:cornerRadius="28dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Settings Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openSettingsButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âš™ï¸ Settings"
                    android:textColor="@color/secondary_text"
                    app:strokeColor="@color/secondary_text"
                    app:cornerRadius="28dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Stats Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openStatsButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“Š Statistics"
                    android:textColor="@color/secondary_text"
                    app:strokeColor="@color/secondary_text"
                    app:cornerRadius="28dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Features Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/featuresCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/actionsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Features"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Feature Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§©"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chess puzzles as unlock mechanism"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš¨"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency unlock with biometric authentication"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multiple difficulty levels and puzzle types"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Support Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/openDonateButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="â¤ï¸ Support ChessLock"
            android:textColor="@color/chess_gold"
            app:strokeColor="@color/chess_gold"
            app:cornerRadius="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/featuresCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Exit App Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitAppButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸšª Exit App"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:alpha="0.7"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/openDonateButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>