<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_700"
    tools:context=".PreviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lockscreen_preview"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Preview Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lockscreen_gradient_bg">

                <!-- Time Display -->
                <LinearLayout
                    android:id="@+id/timeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/hourText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_hour"
                        android:textSize="48sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_separator"
                        android:textSize="48sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>

                    <TextView
                        android:id="@+id/minuteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_minute"
                        android:textSize="48sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-light"/>

                </LinearLayout>

                <!-- Chess Puzzle Prompt -->
                <TextView
                    android:id="@+id/puzzlePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solve_to_unlock"
                    android:textSize="16sp"
                    android:textColor="@android:color/primary_text_light"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/timeContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>

                <!-- Chess Board -->
                <com.ngobi.chesslock.ChessBoardView
                    android:id="@+id/chessBoardView"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    app:layout_constraintTop_toBottomOf="@id/puzzlePrompt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- Move Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    style="?android:attr/buttonBarStyle"
                    app:layout_constraintTop_toBottomOf="@id/chessBoardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/undoButton"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/undo"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/purple_500"/>

                    <Button
                        android:id="@+id/hintButton"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/blue_500"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Customization Options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customization_options"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Difficulty Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/difficulty_level"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/difficultyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/easyRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_easy"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginEnd="16dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/mediumRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_medium"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/hardRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difficulty_hard"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>

            </RadioGroup>

        </LinearLayout>

        <!-- Board Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/board_style"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/boardStyleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/classicRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/board_classic"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginEnd="16dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/modernRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/board_modern"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>

            </RadioGroup>

        </LinearLayout>

        <!-- Piece Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/piece_style"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/pieceStyleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/traditionalRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/piece_traditional"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginEnd="16dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/minimalistRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/piece_minimalist"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>

            </RadioGroup>

        </LinearLayout>

        <!-- Sound Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sound_settings"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/soundEnabledSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_sound_effects"
                android:textColor="@color/white"
                android:checked="true"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            style="?android:attr/buttonBarStyle"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/applyButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_settings"
                android:backgroundTint="@color/blue_600"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:maxWidth="400dp"
                android:minWidth="120dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/resetButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_to_defaults"
                android:backgroundTint="@color/red_600"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:maxWidth="400dp"
                android:minWidth="120dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>